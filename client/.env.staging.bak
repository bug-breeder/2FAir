# =============================================================================
# 2FAir Frontend - Staging Environment Configuration
# =============================================================================
# Staging environment configuration
# Backend: Google Cloud Run (https://api-staging.2fair.app)
# Domain: staging.2fair.app
# =============================================================================

# Backend API Configuration
VITE_SERVER_URL=https://api-staging.2fair.app

# Environment Identifier
VITE_ENVIRONMENT=staging

# Application Configuration
VITE_APP_NAME=2FAir (Staging)
VITE_APP_VERSION=1.0.0-staging

# Feature Flags (Staging - Production-like)
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# WebAuthn Configuration (Staging)
VITE_WEBAUTHN_TIMEOUT=60000
VITE_WEBAUTHN_USER_VERIFICATION=required

# Toast Configuration
VITE_TOAST_DURATION=4000
VITE_TOAST_POSITION=top-right

# Development Tools (Staging - Disabled)
VITE_SHOW_DEV_TOOLS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_HOT_RELOAD=false

# UI Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_SWITCHER=true

# API Configuration (Staging - Stricter)
VITE_API_TIMEOUT=20000
VITE_API_RETRY_ATTEMPTS=2

# Security Configuration
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true

# Monitoring
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_METRICS_COLLECTION=true
